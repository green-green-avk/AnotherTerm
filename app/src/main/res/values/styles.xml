<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="consoleScreenViewStyle">@style/AppConsoleScreenViewStyle</item>
        <item name="extKeyboardViewStyle">@style/AppExtKeyboardViewStyle</item>
        <item name="screenMouseViewStyle">@style/AppScreenMouseViewStyle</item>
        <item name="fancyButtonStyle">@style/AppFancyButtonStyle</item>
        <item name="htmlTextViewStyle">@style/AppHtmlTextView</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    </style>

    <style name="AppThemeBase.Small">
        <item name="actionBarSize">24sp</item>
        <item name="actionBarStyle">@style/AppActionBar.Narrow</item>
        <item name="toolbarStyle">@style/AppToolbar.Narrow</item>
    </style>

    <style name="AppThemeBase.Medium">
        <item name="actionBarSize">32sp</item>
    </style>

    <style name="AppThemeBase.Large">
        <item name="actionBarSize">48sp</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase.Small" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Console.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/tertiary_text_light</item>
        <item name="android:textColorPrimary">@android:color/tertiary_text_light</item>
    </style>

    <style name="AppSettingsTheme" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:editTextColor">@android:color/widget_edittext_dark</item>
        <item name="android:checkboxStyle">@style/AppSettingsCheckboxStyle</item>
    </style>

    <style name="AppSettingsTableHeaderTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppSettingsCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="AppScreenMouseOverlayTheme" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_scale">1</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="buttonStyle">@style/AppScreenMouseButtonStyle</item>
    </style>

    <style name="AppScreenMouseButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@null</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="AppActionBar.Narrow" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/AppTextAppearance.ActionBar.Narrow.Title</item>
        <item name="subtitleTextStyle">@style/AppTextAppearance.ActionBar.Narrow.Subtitle</item>
        <item name="actionButtonStyle">@style/AppWidget.AppCompat.ActionButton.Narrow</item>
        <item name="actionOverflowButtonStyle">
            @style/AppWidget.AppCompat.ActionButton.Narrow.Overflow
        </item>
    </style>

    <style name="AppToolbar.Narrow" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTextAppearance.ActionBar.Narrow.Title</item>
        <item name="subtitleTextAppearance">@style/AppTextAppearance.ActionBar.Narrow.Subtitle
        </item>
        <item name="actionButtonStyle">@style/AppWidget.AppCompat.ActionButton.Narrow</item>
        <item name="actionOverflowButtonStyle">
            @style/AppWidget.AppCompat.ActionButton.Narrow.Overflow
        </item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleMargin">0sp</item>
    </style>

    <style name="AppTextAppearance.ActionBar.Narrow.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextAppearance.ActionBar.Narrow.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppWidget.AppCompat.ActionButton.Narrow" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">8sp</item>
        <item name="android:minHeight">8sp</item>
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">0sp</item>
        <item name="android:paddingStart">0sp</item>
        <item name="android:paddingEnd">0sp</item>
    </style>

    <style name="AppWidget.AppCompat.ActionButton.Narrow.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:minWidth">8sp</item>
        <item name="android:minHeight">8sp</item>
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">0sp</item>
        <item name="android:paddingStart">0sp</item>
        <item name="android:paddingEnd">0sp</item>
    </style>

    <style name="AppWidget.EditorToolbar.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/bg_grid_btn</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="AppWidget.EditorToolbar.ImageButton.Horizontal">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppPreferenceTheme">
        <item name="layout">@layout/preference_base</item>
        <item name="android:textAppearanceLarge">@style/AppTextAppearance.Preference.Title</item>
        <item name="android:textAppearanceSmall">@style/AppTextAppearance.Preference.Summary</item>
        <item name="android:textAppearanceLargeInverse">
            @style/AppTextAppearance.Preference.Title.Category
        </item>
        <item name="preferenceCategoryStyle">@style/AppPreferenceStyleCategory</item>
    </style>

    <style name="AppPreferenceStyleCategory">
        <item name="layout">@layout/preference_base_category</item>
    </style>

    <style name="AppTextAppearance.Preference.Title" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTextAppearance.Preference.Summary" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTextAppearance.Preference.Title.Category">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppWidget.SelectSearchPopup.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:alpha">0.75</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/colorAccenttissimo</item>
    </style>

    <style name="AppWidget.SelectSearchPopup.Divider" parent="">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.75</item>
        <item name="android:background">@color/colorAccenttissimo</item>
    </style>

</resources>
